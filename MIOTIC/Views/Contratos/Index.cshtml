@model IEnumerable<MIOTIC.Models.Contrato>

@{
    ViewData["Title"] = "Lista de Contratos";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Nombre del Proyecto</th>
                    <th scope="col">Fecha del Contrato</th>
                    <th scope="col">Fecha de Entrega</th>
                    <th scope="col">Costo</th>
                    <th scope="col">Encargado</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.NombreProyecto)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaContrato)</td>
                        <td>@Html.DisplayFor(modelItem => item.FechaEntrega)</td>
                        <td>@Html.DisplayFor(modelItem => item.Costo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Usuario.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cliente.Nombre)</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-1">Generar Recibo</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm mx-1">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Create" class="btn btn-success">Crear Nuevo Contrato</a>
    </div>
</div>
