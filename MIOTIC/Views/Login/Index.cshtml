
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body, html {
            height: 100%;
            margin: 0;
        }

        .header, .footer {
            background-color: #6ea8fe;
            height: 80px;
            width: 100%;
            display: flex;
            align-items: center;
            padding: 0 20px;
        }

        .header-title {
            flex: 1;
            text-align: center;
            color: black;
            font-weight: bold;
            font-size: 50px;
        }

        .logo {
            height: 90px;
        }

        .login-container {
            height: calc(100% - 120px); 
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: white;
            flex-direction: column;
        }

        .login-card {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            width: 100%;
            max-width: 900px;
        }

        .card-body {
            background-color: white;
            width: 100%;
        }

        .login-label {
            font-weight: bold;
        }

        .login-image {
            height: auto;
            object-fit: cover;
            max-width: 250px; 
            margin: auto;
        }

        .form-container {
            flex: 1;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-between;
            width: 100%;
        }

        .form-column {
            flex: 1;
            max-width: 60%;
        }

        .image-column {
            flex: 1;
            max-width: 40%;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="header">
        <img src="~/images/Logo.png" class="logo" alt="Logo">
        <div class="header-title">MIOTIC</div>
    </div>
    <div class="login-container">
        <div class="login-card">
            <h2 class="card-title text-center mb-4">Inicio de Sesión</h2>
            <div class="form-container">
                <div class="form-column">
                    <div class="card-body">
                        <form asp-action="Login" asp-controller="Login" method="post">
                            <div class="form-group">
                                <label for="Email" class="login-label">Correo Electrónico</label>
                                <input type="email" class="form-control" id="Email" name="Email" placeholder="Ingresa tu Correo" required>
                            </div>
                            <div class="form-group">
                                <label for="Password" class="login-label">Contraseña</label>
                                <input type="password" class="form-control" id="Password" name="Password" placeholder="Ingrese la Contraseña" required>
                            </div>
                            <button type="button" class="btn btn-secondary" onclick="window.location.href='/index.html'">Volver</button>
                            <button type="submit" class="btn btn-primary">Aceptar</button>
                        </form>
                        @if (TempData["LoginError"] != null)
                        {
                            <div class="alert alert-danger">@TempData["LoginError"]</div>
                        }
                    </div>
                </div>
                <div class="image-column">
                    <img src="~/images/imagen.jpeg" class="img-fluid login-image" alt="Login Image">
                </div>
            </div>
        </div>
    </div>
    <div class="footer"></div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
